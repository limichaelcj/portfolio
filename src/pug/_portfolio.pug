mixin section-header(display, section, addclass)
  h1.portfolio__header(class=addclass data-section=section)
    .overlay--base
    .overlay--select
    .span= display

mixin filter(name, addclass)
  li.filter(class=addclass data-tag=name)
    .overlay
    span= name

mixin project(obj)
  - var tagStr = obj.tags.join(' ')
  - var dataId = obj.name.replace(/\s/g, '_').toLowerCase()
  - var src = `assets/projects/${dataId}.jpg`
  li.project(id=dataId data-tags=tagStr)
    .underlay
      h2= obj.name
      .text
        p= obj.text
        .footer
          .tags
            i.fas.fa-tags
            span= obj.tags.join(' - ')
          a.button--pri(href=obj.url target='_blank' title=obj.url)
            i.fas.fa-globe-americas
            span Visit
    a.project__img(href=obj.url target='_blank')
      img(src=src alt=obj.name)
    .overlay
      
