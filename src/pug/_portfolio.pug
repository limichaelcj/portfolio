mixin prof(name, level, color)
  - var width = "width:" + level + "%;"
  - var bg = `background:linear-gradient(90deg, ${gradient[color][0]}, ${gradient[color][(level / 10) - 1]});`
  - var barStyle = width + bg
  - var valStyle = `color:${gradient[color][0]};;`
  li.prof
    .prof__name
      h3= name
      span(style=valStyle)= level
    figure.prof__level
      .bar(data-level=level style=barStyle)
        if level > 10
          span= level

